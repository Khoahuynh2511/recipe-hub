{
  "framework": "astro",
  "outputDirectory": "dist",
  "buildCommand": "npm run build",
  "devCommand": "astro dev",
  "installCommand": "npm install",
  "functions": {
    "dist/functions/**": {
      "runtime": "nodejs20.x"
    }
  },
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
} 